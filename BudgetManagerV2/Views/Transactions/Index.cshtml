@model IEnumerable<BudgetManagerV2.Models.Transaction>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <p>Title</p>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            <p>Category</p>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Text, "Details", new { id = item.Id })
            </td>
            <td>
                @item.Value.ToString() DKK
            </td>
            <td>
                @item.Date.ToString("dd-MM-yyyy")
            </td>
            <td>
                @Html.ActionLink(item.Category.Name, "Edit", "Categories", new { id = item.Category.Id }, null)
            </td>
        </tr>
    }

</table>
