@model IEnumerable<BudgetManager.Models.Category>

@{
    ViewBag.Title = "Index";

}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(x => x.CategoryName)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.CategoryName
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CategoryName }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CategoryName })
            </td>
        </tr>
    }

</table>

   @if (ViewBag.Message != null)
    {
<script>


alert('@ViewBag.Message');

</script>

    }